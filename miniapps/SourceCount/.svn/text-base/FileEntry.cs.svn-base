using System;

namespace SourceCount
{
	/// <summary>
	/// Single file entry
	/// </summary>
	public class FileEntry
	{
		readonly int lines;
		readonly string name;
		readonly string dir;

		public FileEntry(string name, string dir, int lines)
		{
			this.lines = lines;
			this.name = name;
			this.dir = dir;
		}

		public string Name
		{
			get { return this.name; }
		}

		public string Dir
		{
			get { return this.dir; }
		}

		public int Lines
		{
			get { return this.lines; }
		}

	}
}
